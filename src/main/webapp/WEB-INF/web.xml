<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Servlets -->
    <servlet>
        <servlet-name>ListarCitasServlet</servlet-name>
        <servlet-class>controlador.ListarCitasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaClientesServlet</servlet-name>
        <servlet-class>controlador.ListaClientesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarClienteServlet</servlet-name>
        <servlet-class>controlador.RegistrarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarVehiculo</servlet-name>
        <servlet-class>controlador.RegistrarVehiculo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VehiculosServlet</servlet-name>
        <servlet-class>controlador.VehiculosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validar</servlet-name>
        <servlet-class>controlador.Validar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarClienteAdmin</servlet-name>
        <servlet-class>controlador.RegistrarClienteAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarCitasServlet</servlet-name>
        <servlet-class>controlador.MostrarCitasServlet</servlet-class>
    </servlet>
    <!-- Servlet mapping -->
    <servlet>
        <servlet-name>ActualizarClienteServlet</servlet-name>
        <servlet-class>controlador.ActualizarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarClienteServlet</servlet-name>
        <servlet-class>controlador.EliminarClienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarVehiculoServlet</servlet-name>
        <servlet-class>controlador.ActualizarVehiculoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarVehiculoServlet</servlet-name>
        <servlet-class>controlador.EliminarVehiculoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarClienteAdmin</servlet-name>
        <url-pattern>/registrarClienteAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarCitasServlet</servlet-name>
        <url-pattern>/listaCitas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaClientesServlet</servlet-name>
        <url-pattern>/listaClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarClienteServlet</servlet-name>
        <url-pattern>/registrarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarVehiculo</servlet-name>
        <url-pattern>/RegistrarVehiculo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehiculosServlet</servlet-name>
        <url-pattern>/vehiculos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validar</servlet-name>
        <url-pattern>/Validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarCitasServlet</servlet-name>
        <url-pattern>/mostrarCitas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarClienteServlet</servlet-name>
        <url-pattern>/ActualizarClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarClienteServlet</servlet-name>
        <url-pattern>/EliminarClienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarVehiculoServlet</servlet-name>
        <url-pattern>/ActualizarVehiculoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarVehiculoServlet</servlet-name>
        <url-pattern>/EliminarVehiculoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
